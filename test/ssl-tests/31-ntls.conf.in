        name => "test ntls client doing handshake without setting certs and pkey",
        server => {
            "Enable_ntls" => "on",
        },
        client => {
            "CipherString" => "ECC-SM2-SM4-CBC-SM3",
            "Enable_ntls" => "on",
        },
        test   => {
            "Method" => "NTLS",
            "ExpectedResult" => "ServerFail",
